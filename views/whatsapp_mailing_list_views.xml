<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- WhatsApp Mailing List Search View -->
        <record model="ir.ui.view" id="whatsapp_mailing_list_view_search">
            <field name="name">whatsapp.mailing.list.view.search</field>
            <field name="model">whatsapp.mailing.list</field>
            <field name="arch" type="xml">
                <search string="WhatsApp Mailing Lists">
                    <field name="name"/>
                    <field name="create_date"/>
                    <filter name="inactive" string="Archived" domain="[('active','=',False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Creation Period" name="group_create_date"
                            context="{'group_by': 'create_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- WhatsApp Mailing List Tree View -->
        <record model="ir.ui.view" id="whatsapp_mailing_list_view_tree">
            <field name="name">whatsapp.mailing.list.view.tree</field>
            <field name="model">whatsapp.mailing.list</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <tree string="WhatsApp Mailing Lists" sample="1">
                    <field name="name"/>
                    <field name="contact_count" string="Recipients"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- WhatsApp Mailing List Form View -->
        <record model="ir.ui.view" id="whatsapp_mailing_list_view_form">
            <field name="name">whatsapp.mailing.list.form</field>
            <field name="model">whatsapp.mailing.list</field>
            <field name="arch" type="xml">
                <form string="WhatsApp Mailing List">
                    <header>
                        <button name="action_send_campaign" string="Send Campaign"
                            type="object" class="btn btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_contacts"
                                    type="object" icon="fa-user" class="oe_stat_button">
                                <field name="contact_count" string="Recipients" widget="statinfo"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" class="text-break" placeholder="e.g. VIP Customers"/>
                            </h1>
                        </div>
                        <group>
                            <field name="active" invisible="1"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- WhatsApp Mailing List Kanban View -->
        <record id="whatsapp_mailing_list_view_kanban" model="ir.ui.view">
            <field name="name">whatsapp.mailing.list.view.kanban</field>
            <field name="model">whatsapp.mailing.list</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile o_kanban_mailing_list" sample="1">
                    <field name="name"/>
                    <field name="contact_count"/>
                    <field name="active"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_mailing_list_kanban_grouped">
                                <div class="oe_kanban_content d-flex flex-column h-100">
                                    <h2 class="mb-3 o_text_overflow">
                                        <field name="name"/>
                                    </h2>
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            <button class="btn btn-primary" name="action_view_contacts" type="object">
                                                <t t-esc="record.contact_count.value"/> <span>Contacts</span>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 d-flex align-items-end mt-4">
                                        <div class="col-12">
                                            <div class="row mt3">
                                                <div class="col-6">
                                                    <button name="action_open_import" string="Import Contacts"
                                                        type="object" class="btn btn-secondary w-100">
                                                        Import Contacts
                                                    </button>
                                                </div>
                                                <div class="col-6">
                                                    <button name="action_send_campaign" string="Send Campaign"
                                                        type="object" class="btn btn-secondary w-100">
                                                        Send Campaign
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- WhatsApp Mailing List Action -->
        <record model="ir.actions.act_window" id="action_whatsapp_mailing_list">
            <field name="name">WhatsApp Lists</field>
            <field name="res_model">whatsapp.mailing.list</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a WhatsApp Mailing List
                </p><p>
                    Organize your WhatsApp contacts into lists for marketing campaigns.
                </p>
            </field>
        </record>
    </data>
</odoo>

