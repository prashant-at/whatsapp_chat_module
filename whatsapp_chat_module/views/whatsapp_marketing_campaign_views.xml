<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- WhatsApp Marketing Campaign List View -->
        <record id="view_whatsapp_marketing_campaign_tree" model="ir.ui.view">
            <field name="name">whatsapp.marketing.campaign.tree</field>
            <field name="model">whatsapp.marketing.campaign</field>
            <field name="arch" type="xml">
                <tree string="WhatsApp Campaigns">
                    <field name="name"/>
                    <field name="state" widget="badge" 
                           decoration-success="state == 'sent'"
                           decoration-info="state == 'sending'"
                           decoration-muted="state == 'draft'"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <!-- WhatsApp Marketing Campaign Form View -->
        <record id="view_whatsapp_marketing_campaign_form" model="ir.ui.view">
            <field name="name">whatsapp.marketing.campaign.form</field>
            <field name="model">whatsapp.marketing.campaign</field>
            <field name="arch" type="xml">
                <form string="WhatsApp Campaign">
                    <header>
                        <button name="action_send" string="Send" type="object" 
                                class="oe_highlight" 
                                invisible="state != 'draft'"/>
                        <button name="action_test" string="Test" type="object"
                                invisible="state != 'draft'"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,sending,sent"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1><field name="name" placeholder="e.g. New Product Launch Campaign"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="from_connection_id" 
                                       options="{'no_create': True}"
                                       required="1"/>
                            </group>
                        </group>
                        <group>
                            <label for="mailing_model_id" string="Recipients"/>
                            <div name="mailing_model_id_container">
                                <div class="row">
                                    <div class="col-md-auto">
                                        <field name="mailing_model_id" 
                                               options="{'no_open': True, 'no_create': True}"
                                               readonly="state in ('sending', 'sent')"/>
                                    </div>
                                    <div invisible="not mailing_on_mailing_list" class="col-md-auto pt-1">
                                        <label for="whatsapp_list_ids" string="Select WhatsApp mailing lists:" class="oe_edit_only"/>
                                        <div class="d-inline-flex flex-row align-items-center">
                                            <field name="whatsapp_list_ids" widget="many2many_tags"
                                                   placeholder="Select WhatsApp mailing lists..." 
                                                   class="oe_inline mb-0"
                                                   readonly="state in ('sending', 'sent')"
                                                   required="mailing_on_mailing_list"/>
                                        </div>
                                    </div>
                                </div>
                                <field name="mailing_model_real" invisible="1"/>
                                <field name="mailing_on_mailing_list" invisible="1"/>
                                <field name="mailing_domain" widget="domain"
                                       options="{'model': 'mailing_model_real', 'foldable': true}"
                                       invisible="mailing_on_mailing_list"
                                       readonly="state in ('sending', 'sent')"/>
                            </div>
                        </group>
                        <group>
                            <group>
                            <field name="template_id" 
                                   options="{'no_create': True}"
                                   placeholder="Select a template to load body"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Content" name="content">
                                <field name="body" widget="html" 
                                       placeholder="Enter your campaign message here..."
                                       options="{'rows': 15, 'cols': 80}"/>
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- WhatsApp Marketing Campaign Search View -->
        <record id="view_whatsapp_marketing_campaign_search" model="ir.ui.view">
            <field name="name">whatsapp.marketing.campaign.search</field>
            <field name="model">whatsapp.marketing.campaign</field>
            <field name="arch" type="xml">
                <search string="WhatsApp Campaigns">
                    <field name="name"/>
                    <field name="from_connection_id"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Sending" name="sending" domain="[('state', '=', 'sending')]"/>
                    <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Connection" name="group_connection" context="{'group_by': 'from_connection_id'}"/>
                        <filter string="Creation Date" name="group_create_date" context="{'group_by': 'create_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- WhatsApp Marketing Campaign Action -->
        <record id="action_whatsapp_marketing_campaign" model="ir.actions.act_window">
            <field name="name">WhatsApp Marketing</field>
            <field name="res_model">whatsapp.marketing.campaign</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_whatsapp_marketing_campaign_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first WhatsApp campaign
                </p>
                <p>
                    Create and send WhatsApp marketing campaigns to your mailing lists.
                    Select recipients, compose your message, and send!
                </p>
            </field>
        </record>

        <!-- WhatsApp Marketing Campaign Test Wizard Form View -->
        <record id="view_whatsapp_marketing_campaign_test_form" model="ir.ui.view">
            <field name="name">whatsapp.marketing.campaign.test.form</field>
            <field name="model">whatsapp.marketing.campaign.test</field>
            <field name="arch" type="xml">
                <form string="Test Campaign">
                    <p class="text-muted">
                        Send a sample campaign for testing purpose to the phone number below.
                    </p>
                    <group>
                        <field name="phone_to" placeholder="+1234567890"/>
                    </group>
                    <footer>
                        <button string="Send test" name="send_test" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>

