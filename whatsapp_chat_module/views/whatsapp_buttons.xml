<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WhatsApp Button for Sale Orders -->
    <record model="ir.ui.view" id="whatsapp_button_sale_order">
        <field name="name">Sale Order WhatsApp Button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header/button[@name='action_cancel']" position="after">
                <button class="oe_highlight" icon="fa-whatsapp" 
                        name="%(whatsapp_chat_module.action_whatsapp_simple_wizard)d" 
                        string="WhatsApp Chat" type="action"
                        groups="whatsapp_chat_module.group_whatsapp_user"/>
            </xpath>
        </field>
    </record>

    <!-- WhatsApp Button for Purchase Orders -->
    <record model="ir.ui.view" id="whatsapp_button_purchase_order">
