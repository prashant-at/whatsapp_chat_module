<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- WhatsApp Mailing Contact Search View -->
        <record id="view_whatsapp_mailing_contact_search" model="ir.ui.view">
            <field name="name">whatsapp.mailing.contact.view.search</field>
            <field name="model">whatsapp.mailing.contact</field>
            <field name="arch" type="xml">
                <search string="WhatsApp Mailing Contacts">
                    <field name="name"
                        filter_domain="['|', ('name','ilike',self), ('mobile','ilike',self)]"
                        string="Name / Mobile"/>
                    <field name="tag_ids"/>
                    <field name="list_ids"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Creation Date" name="group_create_date"
                            context="{'group_by': 'create_date'}"/>
                        <filter string="Mailing List" name="group_list_ids"
                            context="{'group_by': 'list_ids'}"/>
                        <filter string="Country" name="group_country_id"
                            context="{'group_by': 'country_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- WhatsApp Mailing Contact Tree View -->
        <record id="view_whatsapp_mailing_contact_tree" model="ir.ui.view">
            <field name="name">whatsapp.mailing.contact.view.tree</field>
            <field name="model">whatsapp.mailing.contact</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <tree string="WhatsApp Mailing Contacts" sample="1" multi_edit="1">
                    <header>
                        <button name="action_import" string="Import" type="object" display="always"
                            context="{'from_whatsapp_list_ids': context.get('active_ids') if context.get('active_model') == 'whatsapp.mailing.list' else False}"/>
                    </header>
                    <field name="create_date" optional="show"/>
                    <field name="name"/>
                    <field name="mobile"/>
                    <field name="country_id" optional="hide"/>
                    <field name="list_ids" widget="many2many_tags" optional="hide"/>
                    <field name="partner_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <!-- WhatsApp Mailing Contact Form View -->
        <record id="view_whatsapp_mailing_contact_form" model="ir.ui.view">
            <field name="name">whatsapp.mailing.contact.form</field>
            <field name="model">whatsapp.mailing.contact</field>
            <field name="arch" type="xml">
                <form string="WhatsApp Mailing Contact">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Contact Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="mobile" placeholder="+91 9157000128"/>
                                <field name="country_id"/>
                                <field name="partner_id" options="{'no_create': True}"/>
                            </group>
                            <group>
                                <field name="list_ids" widget="many2many_tags" 
                                    options="{'no_create': True}" 
                                    placeholder="Select mailing lists..."/>
                                <field name="tag_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- WhatsApp Mailing Contact Kanban View -->
        <record id="view_whatsapp_mailing_contact_kanban" model="ir.ui.view">
            <field name="name">whatsapp.mailing.contact.view.kanban</field>
            <field name="model">whatsapp.mailing.contact</field>
            <field name="arch" type="xml">
                <kanban sample="1">
                    <header>
                        <button name="action_import" string="Import" type="object" display="always"
                            context="{'from_whatsapp_list_ids': context.get('active_ids') if context.get('active_model') == 'whatsapp.mailing.list' else False}"/>
                    </header>
                    <field name="name"/>
                    <field name="mobile"/>
                    <field name="list_ids"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-phone"/> <field name="mobile"/>
                                    </div>
                                    <field name="list_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- WhatsApp Mailing Contact Action -->
        <record id="action_whatsapp_mailing_contact" model="ir.actions.act_window">
            <field name="name">WhatsApp Contacts</field>
            <field name="res_model">whatsapp.mailing.contact</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="search_view_id" ref="view_whatsapp_mailing_contact_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a WhatsApp Contact
                </p><p>
                    Add contacts to your WhatsApp mailing lists for marketing campaigns.
                </p>
            </field>
        </record>
    </data>
</odoo>

