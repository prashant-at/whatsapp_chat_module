<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_whatsapp_connection_form" model="ir.ui.view">
        <field name="name">whatsapp.connection.form</field>
        <field name="model">whatsapp.connection</field>
        <field name="arch" type="xml">
            <form string="WhatsApp Connection">
                <header>
                    <button name="action_connect_whatsapp" type="object" string="Connect" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="from_field" required="1"/>
                            <field name="is_default"/>
                        </group>
                        <group>
                            <field name="api_key" required="1"/>
                            <field name="authorized_person_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_whatsapp_connection_tree" model="ir.ui.view">
        <field name="name">whatsapp.connection.tree</field>
        <field name="model">whatsapp.connection</field>
        <field name="arch" type="xml">
            <tree string="WhatsApp Connections">
                <field name="name"/>
                <field name="from_field"/>
                <field name="is_default" widget="boolean_toggle"/>
                <field name="authorized_person_names"/>
                <button name="action_connect_whatsapp" type="object" string="Connect" class="btn-primary"/>
            </tree>
        </field>
    </record>

    <record id="action_whatsapp_connection" model="ir.actions.act_window">
        <field name="name">WhatsApp Connections</field>
        <field name="res_model">whatsapp.connection</field>
        <field name="view_mode">tree,form</field>
        <field name="groups_id" eval="[(4, ref('whatsapp_chat_module.group_whatsapp_admin'))]"/>
    </record>
</odoo>
