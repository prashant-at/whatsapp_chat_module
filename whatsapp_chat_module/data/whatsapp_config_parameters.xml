<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Backend API URL for REST API calls (chat, message, contact, marketing endpoints) -->
        <record id="ir_config_parameter_backend_api_url" model="ir.config_parameter">
            <field name="key">whatsapp_chat_module.backend_api_url</field>
            <field name="value">http://localhost:4000</field>
        </record>
        
        <!-- Socket URL for Socket.IO real-time connections -->
        <record id="ir_config_parameter_socket_url" model="ir.config_parameter">
            <field name="key">whatsapp_chat_module.socket_url</field>
            <field name="value">http://localhost:4001</field>
        </record>
    </data>
</odoo>

