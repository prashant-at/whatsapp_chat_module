<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="whatsapp_chat_compose_wizard_form">
            <field name="name">whatsapp.chat.simple.wizard.form</field>
            <field name="model">whatsapp.chat.simple.wizard</field>
            <field name="arch" type="xml">
                <form string="Compose WhatsApp Message" class="pt-0 pb-0">
                    <group>
                        <!-- Invisible fields for control -->
                        <field name="model" invisible="1"/>
                        <field name="res_ids" invisible="1"/>
                        
                        <!-- From Number -->
                        <field name="from_number" 
                               string="From Connection" 
                               required="True"
                               placeholder="Select WhatsApp connection to send from..."
                               help="Select the WhatsApp connection to send messages from. Default connection is automatically selected."/>
                        
                        <!-- Recipients -->
                        <label for="partner_ids" string="Recipients"/>
                        <div>
                            <field name="partner_ids" 
                                   widget="many2many_tags" 
                                   placeholder="Add contacts to notify..."
                                   options="{'no_quick_create': True}" 
                                   context="{'default_model': 'whatsapp.chat.simple.wizard', 'active_model': 'whatsapp.chat.simple.wizard', 'force_mobile_display': True, 'show_mobile': True, 'wizard_id': 'New', 'form_view_ref': 'base.view_partner_simple_form'}"/>
                        </div>
                        
                        
                        <!-- Subject -->
                        <field name="subject" placeholder="Message subject..." required="True"/>
                    </group>
                    
                    <!-- Message Content -->
                    <field name="body" class="oe-bordered-editor" 
                           placeholder="Write your WhatsApp message here..." 
                           options="{'style-inline': true}" 
                           force_save="1"/>
                    
                    <!-- Attachments -->
                    <group>
                        <field name="attachment_ids" 
                               widget="many2many_binary" 
                               string="Attach a file" 
                               nolabel="1" 
                               colspan="2"/>
                    </group>
                    
                    <!-- Template Selection -->
                    <group>
                        <field name="template_id" 
                               string="Load template" 
                               class="w-50"
                               domain="[('model', '=', model), '|', ('user_id','=', False), ('user_id', '=', uid)]"
                               context="{'default_model': model, 'default_body_html': body, 'default_subject': subject}"/>
                    </group>
                    
                    
                    <footer>
                        <button string="Send WhatsApp" 
                                name="action_send_whatsapp"
                                type="object" 
                                class="btn-primary" 
                                data-hotkey="q"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_whatsapp_simple_wizard" model="ir.actions.act_window">
            <field name="name">Compose WhatsApp Message</field>
            <field name="res_model">whatsapp.chat.simple.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'whatsapp_chat': True, 'force_mobile_display': True, 'show_mobile': True}</field>
        </record>

    </data>
</odoo>