<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Create sample contacts first -->
    <record id="whatsapp_contact_john" model="whatsapp.contact">
        <field name="name">John Doe</field>
        <field name="phone_number">1111111111</field>
    </record>

    <record id="whatsapp_contact_jane" model="whatsapp.contact">
        <field name="name">Jane Smith</field>
        <field name="phone_number">2222222222</field>
    </record>

    <record id="whatsapp_contact_mike" model="whatsapp.contact">
        <field name="name">Mike Johnson</field>
        <field name="phone_number">3333333333</field>
    </record>

    <!-- Create sample conversations -->
    <record id="whatsapp_conversation_1" model="whatsapp.conversation">
        <field name="contact_id" ref="whatsapp_contact_john"/>
    </record>

    <record id="whatsapp_conversation_2" model="whatsapp.conversation">
        <field name="contact_id" ref="whatsapp_contact_jane"/>
    </record>

    <record id="whatsapp_conversation_3" model="whatsapp.conversation">
        <field name="contact_id" ref="whatsapp_contact_mike"/>
    </record>

    <!-- Create sample messages -->
    <record id="whatsapp_message_1" model="whatsapp.message">
        <field name="message_id">msg_demo_001</field>
        <field name="conversation_id" ref="whatsapp_conversation_1"/>
        <field name="contact_id" ref="whatsapp_contact_john"/>
        <field name="content">Hello John! How can I help you today?</field>
        <field name="message_type">text</field>
        <field name="direction">outbound</field>
        <field name="status">sent</field>
    </record>

    <record id="whatsapp_message_2" model="whatsapp.message">
        <field name="message_id">msg_demo_002</field>
        <field name="conversation_id" ref="whatsapp_conversation_1"/>
        <field name="contact_id" ref="whatsapp_contact_john"/>
        <field name="content">Hi! I have a question about your pricing</field>
        <field name="message_type">text</field>
        <field name="direction">inbound</field>
        <field name="status">delivered</field>
    </record>

    <record id="whatsapp_message_3" model="whatsapp.message">
        <field name="message_id">msg_demo_003</field>
        <field name="conversation_id" ref="whatsapp_conversation_2"/>
        <field name="contact_id" ref="whatsapp_contact_jane"/>
        <field name="content">Thanks for the quick response!</field>
        <field name="message_type">text</field>
        <field name="direction">inbound</field>
        <field name="status">delivered</field>
    </record>

    <record id="whatsapp_message_4" model="whatsapp.message">
        <field name="message_id">msg_demo_004</field>
        <field name="conversation_id" ref="whatsapp_conversation_3"/>
        <field name="contact_id" ref="whatsapp_contact_mike"/>
        <field name="content">Can we schedule a meeting for tomorrow?</field>
        <field name="message_type">text</field>
        <field name="direction">inbound</field>
        <field name="status">delivered</field>
    </record>
</odoo>
